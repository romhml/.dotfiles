# Default config for sway Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

input type:keyboard {
  xkb_layout us
  xkb_variant altgr-intl
  xkb_options caps:escape
}

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod1

# Backgroud image
set $background /usr/share/backgrounds/lapland-white.jpg

set $focus_on_window_activation "focus"

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $browser firefox

for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 30 ppt, border pixel 2
# set $menu exec $term --class=launcher -e sway-launcher-desktop

set $menu "wofi --show drun"

### Display Configuration
output DP-1 mode 2560x1440@119.998Hz position 0,0

#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
set $lock swaylock -f -c 000000

exec swayidle -w \
       timeout 600 $lock \
       timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
       before-sleep $lock

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Key bindings


# Basics:
#
    bindsym $mod+c wl-copy

    # Start a terminal
    bindsym $mod+t exec $term

    # Open browser
    bindsym $mod+w exec $browser
    
    # Kill focused window
    bindsym $mod+q kill

    # Start your launcher
    bindsym $mod+d exec $menu

    # Lock screen
    bindsym $mod+Ctrl+q exec $lockscreen

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

    bindsym $mod+Shift+4 exec grim -g "$(slurp)" - | wl-copy
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

#
# Workspaces:
#
    # Switch to workspace
    bindsym $mod+7 workspace number 1
    bindsym $mod+8 workspace number 2
    bindsym $mod+9 workspace number 3
    bindsym $mod+0 workspace number 4

    # Move focused container to workspace
    bindsym $mod+Shift+7 move container to workspace number 1
    bindsym $mod+Shift+8 move container to workspace number 2
    bindsym $mod+Shift+9 move container to workspace number 3
    bindsym $mod+Shift+0 move container to workspace number 4

    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

    # Shortcuts for opening menus
    set $power-menu "~/.local/bin/wofi-power-menu"
    set $bluetooth-menu "~/.local/bin/wofi-bluetooth"
    set $sound-menu "~/.local/bin/wofi-pulseaudio"

    bindsym $mod+Ctrl+p exec $power-menu
    bindsym $mod+Ctrl+b exec $bluetooth-menu
    bindsym $mod+Ctrl+o exec $sound-menu

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+Ctrl+s layout stacking
    bindsym $mod+Ctrl+w layout tabbed
    bindsym $mod+Ctrl+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+Shift+s fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

#
# Function Keys
#

bindsym XF86AudioRaiseVolume exec pulsemixer --change-volume +3 --max-volume 100
bindsym XF86AudioLowerVolume exec pulsemixer --change-volume -3 --max-volume 100
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym XF86MonBrightnessDown exec brightnessctl set -5%
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Change Monitor input source
bindsym $mod+Shift+o exec "~/.local/bin/switch-monitor-input.sh"

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
    position top
    hidden_state hide
    modifier Mod4
}

include /etc/sway/config.d/*

#
# Workspace assignments
#

assign [app_id="Alacritty"] workspace 1
assign [class="firefox"] workspace 2
assign [instance="slack"] workspace 3
assign [instance="spotify"] workspace 4

#
# Notifications
#

exec mako

#
# Redshift
#
exec gammastep &

#
# Aesthetics
#

gaps inner 10
default_border pixel 0

# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg $background stretch

# Set colors
set $bg #2e3440
set $fg #e5e9f0
set $br #5e81ac


# class                 border  backgr. text    indicator child_border
client.focused          $br     $br     $fg     $bg       $br
client.focused_inactive $bg     $bg     $fg     $bg       $bg
client.unfocused        $bg     $bg     $fg     $bg       $bg
#client.urgent          $br     $br     $fg     $bg       $br #currently not implemented
#client.placeholder     $br     $br     $fg     $bg       $br #currently not implemented

font JetBrainsMono Medium 11

exec $lock
